<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Bug Tracker: @ViewBag.Title</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet" />
</head>
<body>
    <header class="container-fluid">
        <nav class="navbar navbar-dark bg-dark navbar-expand-md">
            <h1 class="navbar-brand p-sm-1"><i class="fas fa-bug"></i> Bug Tracker</h1>
            <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="menu" class="navbar-collapse collapse">
                <ul class="navbar-nav">
                    <li class="nav-item p-sm-1"><a class="nav-link" asp-controller="App" asp-action="Index">Home</a></li>
                    <li class="nav-item p-sm-1"><a class="nav-link" asp-controller="App" asp-action="Login">Log-In</a></li>
                </ul>
            </div>
        </nav>
    </header>
    <section class="container-fluid">
        <h3>@ViewBag.Title</h3>
        @RenderBody()
    </section>
    <footer class="container-fluid">
        <div class="text-center"></div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", false)
</body>
</html>